<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/session_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="2dp">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/count"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle"
                android:fontFamily="sans-serif-light"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                tools:text="12"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:ellipsize="end"
                android:layout_toEndOf="@id/count"
                android:layout_alignParentTop="true"
                android:id="@+id/session_name"
                android:textStyle="bold"
                android:textColor="@color/title"
                android:fontFamily="sans-serif-regular"
                android:textSize="16sp"
                tools:text="Fundamentals of Accounts"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/session_name"
                android:layout_toEndOf="@id/count"
                android:id="@+id/period"
                android:layout_marginStart="16dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/title"
                android:text="Jan - Dec 2016"
                tools:text="Jan - Dec 2016"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/period"
                android:layout_toEndOf="@id/count"
                android:id="@+id/status_text"
                android:layout_marginStart="16dp"
                android:textSize="15sp"
                android:fontFamily="sans-serif-light"
                android:text="Marked Sep 28 at 4pm"
                tools:text="Marked Sep 28 at 4pm"/>

        </RelativeLayout>
        </android.support.v7.widget.CardView>
</LinearLayout>


